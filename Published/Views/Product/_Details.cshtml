


@using JetSetupPortalHelper.APICore
@model JetSetupPortalHelper.APIObjs.ProductObj
@{
    /**/

    Layout = null;
    var error = ViewBag.Error as string;
    var hasError = !string.IsNullOrEmpty(error);
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Client Detail</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            @if (hasError)
            {
                <div class="alert alert-danger" role="alert" id="customError">
                    <h4>Error!</h4>
                    <p>@Html.Raw(error)</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>

            }
            else
            {
               
                    @Html.Hidden("ProductId", Model.ProductId)
                    <div class="col-md-12 col-sm-12">
                        <div id="dvError"></div>
                        
                        <dl class="">
                            <dt>Name</dt>
                            <dd>@Model.Name  </dd>
                            <dt>Live API Url</dt>
                            <dd>@Model.LiveAPIUrl</dd>
                            <dt>SandBox API Url</dt>
                            <dd>@Model.SandBoxAPIUrl</dd>
                            <dt>Description</dt>
                            <dd>@Model.Description</dd>
                            <dt>Display Demographic Statistics</dt>
                            <dd>@Model.DisplayDemographicStat</dd>
                            <dt>Display Location Statistics</dt>
                            <dd>@Model.DisplayLocationStat</dd>
                            <dt>Display Summary Statistics</dt>
                            <dd>@Model.DisplaySummaryStat</dd>
                            <dt>Description </dt>
                            <dd>@Model.Description</dd>
                            <dt>Current Implementation</dt>
                            <dd>@Enum.Parse(typeof(CurrentImplementation),@Model.CurrentImplementation.ToString()).ToString()</dd>
                            <dt>Status  </dt>
                            <dd>@Model.StatusLabel</dd>
                        </dl>
                      
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                          
                        </div>
                    </div>
                

            }
        </div>

    </div>
</div>




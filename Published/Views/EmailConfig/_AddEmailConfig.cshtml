

@model JetSetupPortalHelper.APIObjs.RegEmailConfigObj
@{
    /**/

    Layout = null;
    var error = ViewBag.Error as string;
    var hasError = !string.IsNullOrEmpty(error);

    int[] Ids =(int[]) Session["ProductClientIds"];
    string[] Names= (string[])
        Session["ProductClientNames"];
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Add Email Config</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            @if (hasError)
            {
                <div class="alert alert-danger" role="alert" id="customError">
                    <h4>Error!</h4>
                    <p>@Html.Raw(error)</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>

            }
            else
            {
                using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmAdd", data_parsley_validate = "" }))
                {
                    <input type="hidden" class="form-control input-new hidden" id="ClientId" value="@Ids[0]" name="ClientId">
                    <input type="hidden" class="form-control input-new " id="ProductId" value="@Ids[1]" name="ProductId">
                    <div class="col-md-12 col-sm-12">
                        <div id="dvError"></div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                Title
                                <input type="text" class="form-control input-new" id="Title" value="@Model.Title" name="Title" required="" data-parsley-maxlength="300" data-parsley-minlength="2" data-parsley-required-message="Title must be between 2 and 300 characters">
                            </div>
                            <div class="form-group col-md-6">
                                Email Display Title
                                <input type="text" class="form-control input-new" id="Title" value="@Model.EmailDisplayTitle" name="Title" required="" data-parsley-maxlength="250" data-parsley-minlength="3" data-parsley-required-message="Email Display Title must be between 3 and 250 characters">
                            </div>
                            <div class="form-group col-md-6">
                                Client Name
                                <label class="form-control input-new"> @Names[0]</label>
                            </div>
                            <div class="form-group col-md-6">
                                Product Name
                                <label class="form-control input-new">@Names[1]</label>
                            </div>
                            <div class="form-group col-md-6">
                                Email From
                                <input type="text" class="form-control input-new" id="EmailFrom" value="@Model.EmailFrom" name="EmailFrom" required="" data-parsley-maxlength="100" data-parsley-minlength="3" data-parsley-required-message="Email From must be between 3 and 100 characters">
                            </div>
                            <div class="form-group col-md-6">
                                Activation Email Subject
                                <input type="text" class="form-control input-new" id="ActivationEmailSubject" value="@Model.ActivationEmailSubject" name="ActivationEmailSubject" required="" data-parsley-maxlength="300" data-parsley-minlength="3" data-parsley-required-message="Reset Password Subject must be between 3 and 300 characters">
                            </div>
                            <div class="form-group col-md-6">
                                Reset Password Subject
                                <input type="text" class="form-control input-new" id="ResetPasswordSubject" value="@Model.ResetPasswordSubject" name="ResetPasswordSubject" required="" data-parsley-maxlength="300" data-parsley-minlength="3" data-parsley-required-message="Reset Password Subject must be between 3 and 300 characters">
                            </div>
                            <div class="form-group col-md-6">
                                Nomination Email Subject
                                <input type="text" class="form-control input-new" id="NominationEmailSubject" value="@Model.NominationEmailSubject" name="NominationEmailSubject" required="" data-parsley-maxlength="300" data-parsley-minlength="3" data-parsley-required-message="Nomination Email Subject must be between 3 and 300 characters">
                            </div>
                            <div class="form-group col-md-6">
                                Acknowledgement Email Subject
                                <input type="text" class="form-control input-new" id="AcknowledgementEmailSubject" value="@Model.AcknowledgementEmailSubject" name="ActivationEmailSubject" required="" data-parsley-maxlength="300" data-parsley-minlength="3" data-parsley-required-message="Acknowledgement Email Subject must be between 3 and 300 characters">
                            </div>
                            <div class="form-group col-md-6">
                                Activation Url
                                <input type="text" class="form-control input-new" id="ActivationUrl" value="@Model.ActivationUrl" name="ActivationUrl" required="" data-parsley-maxlength="350" data-parsley-minlength="3" data-parsley-required-message="Activation Url must be between 3 and 300 characters">
                            </div>
                            <div class="form-group col-md-6">
                                Reset Password Url
                                <input type="text" class="form-control input-new" id="ResetPasswordUrl" value="@Model.ResetPasswordUrl" name="ResetPasswordUrl" data-parsley-maxlength="350" data-parsley-minlength="0" data-parsley-required-message="Reset PasswordUrl must not more than 350 characters">
                            </div>
                            <div class="form-group col-md-6">
                                Accept Nomination Url
                                <input type="text" class="form-control input-new" id="AcceptNominationUrl" value="@Model.AcceptNominationUrl" name="AcceptNominationUrl" required="" data-parsley-maxlength="350" data-parsley-minlength="3" data-parsley-required-message="Activation Url must be between 3 and 300 characters">
                            </div>
                            <div class="form-group col-md-6">
                                Decline Nomination Url
                                <input type="text" class="form-control input-new" id="DeclineNominationUrl" value="@Model.DeclineNominationUrl" name="DeclineNominationUrl" required="" data-parsley-maxlength="350" data-parsley-minlength="3" data-parsley-required-message="Decline Nomination Url must be between 3 and 300 characters">
                            </div>
                        </div>
                        
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-success">Add EmailConfig</button>
                        </div>
                    </div>
                }

            }
        </div>

    </div>
</div>

<script src="~/Content/assets/libs/jquery-validation/dist/jquery.validate.min.js"></script>

<script>
    $(document).ready(function () {
        loadProducts();
        loadClients();
        $('#frmAdd').parsley().on('field:validated', function() {
            var ok = $('.parsley-error').length === 0;
            if (!ok) {
                InlineErrorMessage("Validation Error! Please check values inputted", "dvError");
                return false;
            }
        }).on('form:submit', function () {
            ClearInlineError("dvError");


            var frm = $("#frmAdd");

            if (frm == null) {
                InlineErrorMessage("Invalid Tab Information", "dvError");
                return false;
            }


            if (!frm.valid()) {
                InlineErrorMessage("Validation Error! Please check all fields", "dvError");
                return false;
            }

            //var actionUrl = frm.attr("action");
            var params = frm.serializeArray();


            $.ajax({
                type: "POST",
                url: '@Url.Action("ProcessAddEmailConfigRequest", "EmailConfig")',
                data: params,
                success: function (data) {
                    if (!data.IsAuthenticated) {
                        window.location.href = "@Url.Action("Login", "Portal")";
                        return;
                    }
                    if (!data.IsSuccessful) {
                        InlineErrorMessage(data.Error ? data.Error : "Unknown error occured. Please try again later!", "dvError");
                       swal({
                            title: "",
                            text: data.Error ? data.Error : "Unknown error occured. Please try again later!",
                            type: "error",
                            showCancelButton: false,
                            confirmButtonText: "Close",
                            closeOnConfirm: true,
                        }, function (isConfirm) {
                            if (isConfirm) {

                            }
                        });

                    } else {
                        $('#dvModal').modal('hide');
                        swal({
                            title: "",
                            text: "EmailConfig was added successfully",
                            type: "success",
                            showCancelButton: false,
                            confirmButtonText: "Ok",
                            closeOnConfirm: false,
                        }, function (isConfirm) {
                            if (isConfirm) {
                               window.location.reload();
                            }
                        });
                    }
                },
                complete: function () {
                    $(".loader").hide();
                    $("#loadingMessage").html("");
                }
            });
            return false;
        });



    });

    function loadClients() {
        $.getJSON("@Url.Action("LoadClients", "ODataProvider")",
            function(data) {
                var items = "";
                $.each(data,
                    function(i, item) {
                        if (parseInt('@Model.ClientId') === item.Id) {
                            items += "<option value='" + item.Id + "' selected='selected'>" + item.Name + "</option>";
                        } else {
                            items += "<option value='" + item.Id + "'>" + item.Name + "</option>";
                        }

                    });
                $("#ClientId").html(items);
            });
    }
    function loadProducts() {
        $.getJSON("@Url.Action("LoadProducts", "ODataProvider")",
            function(data) {
                var items = "";
                $.each(data,
                    function(i, item) {
                        if (parseInt('@Model.ProductId') === item.Id) {
                            items += "<option value='" + item.Id + "' selected='selected'>" + item.Name + "</option>";
                        } else {
                            items += "<option value='" + item.Id + "'>" + item.Name + "</option>";
                        }

                    });
                $("#ProductId").html(items);
            });
    }
</script>

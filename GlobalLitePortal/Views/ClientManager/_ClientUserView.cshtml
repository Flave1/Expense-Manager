
@model IEnumerable<GlobalLitePortalHelper.APIObjs.ClientUserObj>
@{
    Layout = null;
    var error = ViewBag.Error as string;
    if (Model == null || !Model.Any())
    {
        if (string.IsNullOrEmpty(error))
        {
            error = "Users' List is empty";
        }
    }
}
@if (!string.IsNullOrEmpty(error) && error.Length > 0)
{
    <div class="alert alert-success btn btn-sm" role="alert">
        @Html.Raw(error)
    </div>
}
else
{
    <div class="table-responsive">
        <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th> Username</th>
                    <th class="tabledit-toolbar-column">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int k = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <th>@k</th>
                            <td>
                                <span class="wrap-table">
                                    @item.UserName
                                </span>
                            </td>
                            <td>
                                <div class="tabledit-toolbar btn-toolbar">
                                    <span class="p-1"><a href="#" onclick="deleteItem('@item.ClientId', '@item.UserId')" data-toggle="tooltip" title="Delete"><i class="far fa-trash-alt red-text"></i></a></span>
                                </div>
                            </td>
                        </tr>
                        k++;
                    }
                }

            </tbody>
        </table>
    </div>
}


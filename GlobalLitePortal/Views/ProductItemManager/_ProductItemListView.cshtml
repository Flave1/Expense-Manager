@model IEnumerable<GlobalLitePortalHelper.APIObjs.ProductItemObj>
@{
    Layout = null;
    var error = ViewBag.Error as string;
}
<div>
    @if (!string.IsNullOrEmpty(error) && error.Length > 0)
    {
        <div class="alert alert-success btn btn-sm" role="alert">
            @Html.Raw(error)
        </div>
    }
    <div class="table-responsive">
        <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th> Name</th>
                    <th> Title</th>
                    <th> Channel Code </th>
                    <th> Live API Url </th>
                    <th> SandBox API Url </th>
                    <th>Status</th>
                    <th class="tabledit-toolbar-column">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int k = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <th>@k</th>
                            <td>
                                <span class="wrap-table">
                                    @item.Name
                                </span>
                            </td>
                            <td>
                                <span class="wrap-table">
                                    @item.Title
                                </span>
                            </td>
                            <td>
                                <span class="wrap-table">
                                    @item.ChannelCode
                                </span>
                            </td>
                            <td>
                                <span class="wrap-table">
                                    @item.LiveAPIUrl
                                </span>
                            </td>
                            <td>
                                <span class="wrap-table">
                                    @item.SandBoxAPIUrl
                                </span>
                            </td>
                            <td>
                                <span class="wrap-table">
                                    @item.StatusLabel
                                </span>
                            </td>
                            <td>
                                <div class="tabledit-toolbar btn-toolbar">
                                    <span class="p-1"><a href="#" onclick="editItem('@item.ProductItemId')" data-toggle="tooltip" title="Edit"><i class="far fa-edit"></i></a></span>
                                    <span class="p-1"><a href="#" onclick="itemDetail('@item.ProductItemId')" data-toggle="tooltip" title="Detail"><i class="fas fa-eye"></i></a></span>
                                    <span class="p-1"><a href="#" onclick="deleteItem('@item.ProductItemId')" data-toggle="tooltip" title="Delete"><i class="far fa-trash-alt red-text"></i></a></span>
                                </div>
                                

                            </td>

                        </tr>
                        k++;
                    }
                }

            </tbody>
        </table>
    </div>
</div>

@model IEnumerable<GlobalLitePortalHelper.APIObjs.AlertProviderItemObj>
@{
    Layout = null;
}
    <div style="width: 100%">
        <div class="table-responsive">
            <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>#</th>
                        @*<th> Alert Provider</th>*@
                        <th> Alert Item</th>
                        <th>Status</th>
                        <th class="tabledit-toolbar-column">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int k = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <th>@k</th>
                                @*<td>
                                    <span class="wrap-table">
                                        @item.AlertProviderName
                                    </span>
                                </td>*@
                                <td>
                                    <span class="wrap-table">
                                        @item.AlertItemName
                                    </span>
                                </td>
                                <td>
                                    <span class="wrap-table">
                                        @item.StatusLabel
                                    </span>
                                </td>
                                <td>
                                    <div class="tabledit-toolbar btn-toolbar">
                                        @if (item.AlertProviderItemId > 145)
                                        {
                                            <span class="p-1"><a href="@Url.Action("_EditAlertProviderItem", "AlertProviderItemManager", new {id = item.AlertProviderItemId, providerId = item.AlertProviderId})" data-modal="" data-toggle="tooltip" title="Edit"><i class="far fa-edit"></i></a></span>
                                            @*<span class="p-1"><a href="#" onclick="deleteItem('@item.AlertProviderItemId')" data-toggle="tooltip" title="Delete"><i class="far fa-trash-alt red-text"></i></a></span>*@
                                        }

                                        <span class="p-1"><a href="@Url.Action("_AlertProviderItemDetail", "AlertProviderItemManager", new {id = item.AlertProviderItemId, providerId = item.AlertProviderId})" data-modal="" data-toggle="tooltip" title="Detail"> <i class="fas fa-eye"></i></a></span>


                                    </div>
                                   
                                   


                                </td>

                            </tr>
                            k++;
                        }
                    }

                </tbody>
            </table>
        </div>

    </div>

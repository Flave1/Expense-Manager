@using GlobalLitePortalHelper.APIObjs
@model IEnumerable<GlobalLitePortalHelper.APIObjs.LookupStatObj>
@{
    Layout = null;
    var error = ViewBag.Error as string;
    var itemList = (Model ?? new List<LookupStatObj>()).ToList();
}
@Html.Partial("_WaitLoader")
<h4><i class="fas fa-exclamation-circle"></i> Alert Lookups</h4>
<div class="row pb-4">
    <div class="col-md-4">
        <div class="card p-3 edu-info">
            <span class=""><strong>Alert Providers</strong></span>
            <span class="badge edu-color pb-0 fa-pull-right pb-1" style="font-size: 18px">@itemList.Find(m => m.LookupItem == (int) LookupItem.AlertProvider).Count</span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-3 edu-info">
            <span class=""><strong>Alert Items</strong></span>
            <span class="badge edu-color pb-0 fa-pull-right pb-1" style="font-size: 18px">@itemList.Find(m => m.LookupItem == (int) LookupItem.AlertItem).Count</span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-3 edu-info">
            <span class=""><strong>Provider-Items</strong></span>
            <span class="badge  edu-color pb-0 fa-pull-right pb-1" style="font-size: 18px">@itemList.Find(m => m.LookupItem == (int) LookupItem.AlertProviderItem).Count</span>
        </div>
    </div>
</div>
<div class="row pb-4">
    <div class="col-md-4">
        <div class="card p-3 p-info">
            <span class=""><strong>Alert Types</strong></span>
            <span class="badge p-color pb-0 fa-pull-right pb-1" style="font-size: 18px">@itemList.Find(m => m.LookupItem == (int) LookupItem.AlertType).Count</span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-3 p-info">
            <span class=""><strong>Alert Schedules</strong></span>
            <span class="badge p-color pb-0 fa-pull-right pb-1" style="font-size: 18px">@itemList.Find(m => m.LookupItem == (int) LookupItem.AlertSchedule).Count</span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-3 p-info">
            <span class=""><strong>Alert Routes</strong></span>
            <span class="badge p-color pb-0 fa-pull-right pb-1" style="font-size: 18px">@itemList.Find(m => m.LookupItem == (int) LookupItem.AlertRoute).Count</span>
        </div>
    </div>
</div>
<hr />
<h4><i class="fas fa-bell"></i>General Lookups</h4>
<div class="row pb-4">
    <div class="col-md-4">
        <div class="card p-3 exp-info">
            <span class=""><strong>SMS Networks</strong></span>
            <span class="badge exp-color pb-0 fa-pull-right pb-1" style="font-size: 18px">@itemList.Find(m => m.LookupItem == (int) LookupItem.AlertNetwork).Count</span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-3 exp-info">
            <span class=""><strong>SMS Providers</strong></span>
            <span class="badge exp-color pb-0 fa-pull-right pb-1" style="font-size: 18px">@itemList.Find(m => m.LookupItem == (int) LookupItem.SMSProvider).Count</span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-3 exp-info">
            <span class=""><strong>SMS Routes</strong></span>
            <span class="badge exp-color pb-0 fa-pull-right pb-1" style="font-size: 18px">@itemList.Find(m => m.LookupItem == (int) LookupItem.SMSRoute).Count</span>
        </div>
    </div>

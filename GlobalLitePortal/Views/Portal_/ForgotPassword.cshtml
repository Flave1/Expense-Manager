@model GlobalLitePortal.PortalCore.Model.PasswordRetrievalContract
@{
    ViewBag.Title = "Retrieve Password";
    ViewBag.AuthTitle = "Retrieve Password";
    Layout = "~/Views/Shared/_AuthorizeLayout.cshtml";
    var error = ViewBag.Error as string;
    var success = ViewBag.Success as string;
}


@using (Html.BeginForm("ForgotPassword", "Portal"))
{
    @Html.AntiForgeryToken()
    if (!string.IsNullOrEmpty(error) && error.Length > 0)
    {
        <div class="alert alert-danger" role="alert">
            @Html.Raw(error)
        </div>
    }
    if (!string.IsNullOrEmpty(success) && success.Length > 0)
    {
        <div class="alert alert-success" role="alert">
            @Html.Raw(success)
        </div>
    }
    <div class="input-group">
        <input type="email" id="Email" name="Email" class="form-control mb-4 portal-log-form" placeholder="Email Address" required="">
        <span class="md-line"></span>
    </div>
    <div class="row m-t-25 text-left">
        <div class="col-sm-12 col-xs-12 forgot-phone">
            <a href="@Url.Action("Login", "Portal")" class="text-right f-w-600 text-inverse text-white">Click Here to Login</a>
        </div>
    </div>
    <div class="row m-t-30">
        <div class="col-md-12">
            <button type="submit" class="btn btn-success btn-sm btn-md btn-block waves-effect text-center" style="font-size:13px;">Retrieve Password</button>
        </div>
    </div>

}
